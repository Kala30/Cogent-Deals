<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cogent_Deals.DealPage"
             Title="{Binding Deal.Title}">
  <ContentPage.Content>
    <StackLayout>
      <Label Text="{Binding Deal.Title}" FontSize="Large" HorizontalTextAlignment="Center" Margin="0,20,0,0"/>
      <Label Text="{Binding Deal.Category}" TextColor="#27ae60" FontSize="Large" HorizontalTextAlignment="Center"/>
      <Label Text="{Binding Deal.Id}" FontSize="Medium" HorizontalTextAlignment="Center"/>
      <Image Source="{Binding Deal.Images.image_intro}"/>
      <Button Text="Get Deal"
              TextColor="White"
              WidthRequest="300"
              HeightRequest="60"
              FontSize="Medium"
              BackgroundColor="#27ae60"
              Margin="20"/>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>